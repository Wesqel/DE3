<Page x:Class="DE3.NewFolder1.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DE3.NewFolder1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="Admin" Content="Администратор" Width="100" Height="25" Click="Admin_Click"/>
        <Button x:Name="Moderator" Content="Модератор" Width="100" Margin="0 10 0 0"  Height="25" Click="Moderator_Click"/>
        <Button x:Name="User" Content="Пользователь" Width="100" Margin="0 10 0 0"  Height="25" Click="User_Click"/>
    </StackPanel>
</Page>
